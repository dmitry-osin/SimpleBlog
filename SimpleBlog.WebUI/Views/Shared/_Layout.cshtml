@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" href="~/Content/Images/favicon-cloud.ico">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<!--Main Menu-->
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-default navbar-inverse" style="border: 2px solid black;">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"><i class="fa fa-cog" style="color: white"></i></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Posts", "PostManage", new {area = "Admin"})"><i class="fa fa-sticky-note-o"></i> Записи</a></li>
                        <li><a href="#"><i class="fa fa-tag"></i> Теги</a></li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li><a href="#"><i class="fa fa-user"></i> Вы вошли @User.Identity.Name</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Index", "Admin", new {area = "Admin"})"><i class="fa fa-home"></i> В админку</a></li>
                        <li><a href="@Url.Action("LogOff", "Account")"><i class="fa fa-times-circle-o"></i> Выйти</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    }
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-cloud"></span><span style="margin-left: 10px;"> Dmitry Osin</span></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav  navbar-right">
                    <li>@Html.ActionLink("Блог", "Posts", "Blog", new {page = 1}, null)</li>
                    <li><a href="@Url.Action("AboutMe", "Home")">Обо мне</a></li>
                    <li><a href="@Url.Action("Contacts", "Home")">Контакты</a></li>
                    <li role="separator" class="divider"></li>
                    <li class="hidden-sm hidden-md"><a href="#">Мои работы</a></li>
                    <li class="hidden-sm hidden-md"><a href="#">Сертификаты</a></li>
                    <li class="hidden-sm hidden-md hidden-lg"><a href="#">Навыки</a></li>
                    <li class="hidden-sm hidden-md hidden-lg"><a href="#">Сотрудничество</a></li>
                    <li class="hidden-sm hidden-md hidden-lg"><a href="#">Правообладателям</a></li>
                    <li class="hidden-sm hidden-md hidden-lg"><a href="#">Копипастерам</a></li>

                    <li class="dropdown hidden-xs">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-menu-hamburger"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="hidden-lg"><a href="#">Мои работы</a></li>
                            <li class="hidden-lg"><a href="#">Сертификаты</a></li>
                            <li class=""><a href="#">Навыки</a></li>
                            <li class=""><a href="#">Сотрудничество</a></li>
                            <li class=""><a href="#">Правообладателям</a></li>
                            <li class=""><a href="#">Копипастерам</a></li>
                        </ul>

                    </li>
                    <li class="dropdown hidden-xs">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-search"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @using (Html.BeginForm("Search", "Blog", FormMethod.Post, new { style = "width: 300px; padding: 20px;" }))
                                {
                                    <div class="form-group">
                                        <label for="search-field">Что ищем?</label>
                                        <input type="search" name="query" class="form-control"
                                               id="search-field" placeholder="поисковый запрос" />
                                    </div>

                                    <button type="submit" class="btn btn-default">Искать</button>
                                }
                            </li>
                        </ul>

                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <!--Main Menu-->

    <div id="header" class="container-fluid">
        <br />
        <a href="#">
            <img id="header-image" src="../../Content/Images/logo.jpg" alt="logo" class="img-rounded img-circle img-thumbnail shadow img-responsive center-block">
        </a>
        <h1 id="header-text" align="center">@SettingsProvider.BlogName</h1>
    </div>


    <!--Main Content-->

    <div class="container-fluid">
        @RenderBody()
    </div>
    <!--Main Content End-->
    <!--Footer Begin-->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row" style="margin-top: 20px;">
                <div class="col-md-4 col-md-offset-1 col-lg-offset-2">
                    <span class="text-uppercase">
                        <span class="glyphicon glyphicon-copyright-mark" style="margin-right: 20px;"></span>Dmitry Osin, 2016
                    </span>
                </div>

                <div class="col-md-6 hidden-xs hidden-sm">
                    <span class="text-uppercase">
                        <span class="glyphicon glyphicon-flash" style="margin-right: 20px; color: yellow;"></span>Заряжено мощью <a href="http://asp.net/" style="color: rgb(115, 187, 189)">ASP.NET MVC5</a> и <a href="http://getbootstrap.com/" style="color: darksalmon">Bootstrap</a>
                    </span>
                </div>

            </div>
        </div>
    </footer>
    <!--Footer End-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/prism")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>